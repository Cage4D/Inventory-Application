<html>
    <head>
        <title>Home</title>
        <link rel="stylesheet" href="/styles.css">
    </head>
    <body>
        <div class="home-container">
            <div class="side-panel">
                <a href="/" class="panel-section">home</a>
                <a href="/genre" class="panel-section">genres</a>
                <a href="/publisher" class="panel-section">publishers</a>
                <a href="/platform" class="panel-section">platforms</a>
                <a href="/games" class="panel-section">game</a>
            </div>
            <div class="main-content">
                <table class="games-table">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Genres</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% data.forEach(game => { %>
                            <tr>
                                <td><%= game.id %></td>
                                <td><%= game.name %></td>
                                <td><%= game.genres.length ? game.genres.join(", ") : "None" %></td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </body>
</html>